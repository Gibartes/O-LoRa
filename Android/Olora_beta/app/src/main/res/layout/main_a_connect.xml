<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:background="#88000000">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingBottom="20sp"
        android:background="#BB000000">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/NameLayout"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="내 이름"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/showMyName"
                android:layout_gravity="center"
                android:text="(default)"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editMyName"
                android:layout_gravity="center"
                android:background="@drawable/pen"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/BDLayout"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="연결된 블루투스 장치"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/showBDName"
                android:text="(연결되지 않음)"
                android:textAlignment="center"
                android:maxLines="1"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ImageButton
                android:id="@+id/findXbee"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:background="@drawable/bluetoothoff"/>
            <ImageButton
                android:id="@+id/connectedXbee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bluetoothon"/>
            <TextView
                android:id="@+id/findText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/findXbee"
                android:text="주변 Olora 찾기
"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/showText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/connectedXbee"
                android:layout_centerHorizontal="true"
                android:text="WELCOME-OLora!"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"/>
        </RelativeLayout>


    </LinearLayout>

    <ImageButton
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:id="@+id/clearall"
        android:background="@drawable/sana_icon"
        android:layout_alignParentBottom="true"/>

    <ImageButton
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:id="@+id/showAllclear"
        android:background="@color/colorInvisible"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>