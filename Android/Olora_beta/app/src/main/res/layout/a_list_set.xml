<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">

    <!-- 타이틀바 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/dialog_main_color">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/titleBarText"
            android:layout_height="53dp"
            android:gravity="center"
            android:text=""
            android:textColor="#fff"
            android:textSize="20dp" />

    </RelativeLayout>
    <!-- //end 타이틀바 -->

    <LinearLayout
        android:id="@+id/setbox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txtSetList"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:hint="채팅방명"
            android:maxLines="3" />

        <ImageButton
            android:id="@+id/btnTextDel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/xbutton2"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">
        <NumberPicker
            android:id="@+id/setDclv"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/setDclvchar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:textSize="20dp"
            android:text="초"
            android:textStyle="bold"/>
    </LinearLayout>




    <RelativeLayout
        android:id="@+id/progressbox"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ProgressBar
            android:id="@+id/Prog"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:text="변경"
        android:textColor="@color/dialog_main_color"
        android:textSize="15dp"
        android:textStyle="bold" />

</RelativeLayout>
